#:kivy 1.10.1

<BookingCode>:
    id: screen

    Image:
        size_hint: None, None
        size: 800, 242
        pos: 0, 238
        source: 'assets/bookingCodeGuide.png'
        allow_stretch: True

    Widget:
        size_hint: None, None
        size: 800, 238
        pos: 0, 0
        canvas:
            Color:
                rgba: .95, .96, .99, 1
            Rectangle:
                size: self.size
                pos: self.pos

    Label:
        size_hint: None, None
        size: 95, 16
        text: 'Booking Number'
        font_size: 12
        bold: True
        color: .47, .48, .57, 1
        pos: 274, 208
        valign: 'middle'

    TextInput:
        size_hint: None, None
        size: 148, 29
        pos: 377, 200
        font_size: 12
        cursor_color: 0, 0, 0, 1
        padding_x: 15
        padding_y: 6
        background_active: ''
        background_normal: ''
        text: screen.code
        readonly: True

    BackArrow:
        on_press: root.manager.current = 'home'


<Keyboard>:
    size_hint: None, None
    pos: 276, 14

<Key>:
    size_hint: None, None
    size: 62, 32
    background_color: .44, .55, .80, 1
    # background_color: .93, .94, .95, 1
    background_normal: ''
    background_down: ''
    font_size: 16
    bold: True
    color: 1, 1, 1, 1
    # color: .5, .51, .55, 1
    on_press: self.parent._on_type(self.text)
